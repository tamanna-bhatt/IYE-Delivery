<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rest_rec_rect"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="18dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:siShape="@drawable/rect1"
                android:id="@+id/foodImage"
                android:scaleType="fitXY"
                android:src="@drawable/food1"
                />

            <FrameLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/black_shadow"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="bottom">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        >
                        <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/restaurantName"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:text="Angry Birds Restaurant"
                            android:textColor="#ffffff"/>
                        <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/restaurantCuisine"
                            android:textColor="#ffffff"
                            android:text="Chineese,Punjabi,Fastfood,SouthIndian"/>

                    </LinearLayout>

                </FrameLayout>

            </FrameLayout>

            <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratings"
                android:text="4.2"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:background="@drawable/green_rect1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="11dp">
                <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#484d53"
                    android:layout_marginTop="10dp"
                    android:text="Avg.Delivery Time"/>

                <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/deliveryTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30-40 min"
                    android:textSize="11dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#a9aaac" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp">
                <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#484d53"
                    android:layout_marginTop="10dp"
                    android:text="Min.Order"
                    />
                <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/amount"
                    android:text="300 Rs"
                    android:textSize="11dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#a9aaac"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="0dp">
                <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#484d53"
                    android:layout_marginTop="10dp"
                    android:text="Payment Method"/>
                <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/paymentMode"
                    android:text="Onine and COD "
                    android:textSize="11dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#a9aaac"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>