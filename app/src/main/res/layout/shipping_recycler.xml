<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="18dp">
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:id="@+id/radioButton"
            android:src="@drawable/ic_radio_button_orange"/>
        <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:id="@+id/addressName"
            android:textColor="#ec5a31"
            android:text="Home"
            android:layout_marginLeft="9dp"/>

    </LinearLayout>
    <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7c7b7b"
        android:id="@+id/address"
        android:textSize="12dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="9dp"
        android:text="54/E Radhakrishna Soc. Opposite RK Bunglows, Near Punch pulla, Vadodara, 390011"/>
<View
    android:layout_width="match_parent"
    android:layout_height="0.7dp"
    android:background="#cdd9d9"
    android:layout_marginTop="17dp"
    android:layout_marginBottom="0dp"/>
</LinearLayout>