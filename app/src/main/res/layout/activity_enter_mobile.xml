<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EnterMobileActivity">

    <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="21dp"
        android:text="Lader Spoon"
        android:textColor="@color/textColor"
        android:textSize="13dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#dddddd" />

    <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Black
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="25dp"
        android:text="Enter Mobile Number"
        android:textColor="@color/textColor"
        android:textSize="23dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="horizontal">

        <e.wolfsoft1.iyedelivery.customfonts.EditText_Roboto_Regular
            android:id="@+id/edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:fontFamily="sans-serif"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:textColor="@color/greyText"
            android:textColorHint="@color/greyText"

            android:textSize="13sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/ic_smartphone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="10dp"
        android:background="#9f9e9e" />

    <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="51dp"
        android:layout_marginTop="21.2dp"
        android:gravity="center"
        android:lineSpacingExtra="5.3sp"
        android:text="Your mobile number will be linked with rushabhpatel381@gmail.com"
        android:textColor="@color/greyText"
        android:textSize="12dp" />


</LinearLayout>