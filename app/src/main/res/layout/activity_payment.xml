<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f9f9f9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#222129"
            android:paddingBottom="17.5dp"
            android:paddingTop="17.5dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_left_arrow"
                android:layout_marginLeft="20dp"/>
            <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shipping Details"
                android:textColor="#FFFFFF"
                android:paddingLeft="27dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2e2e34"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
            <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:gravity="center"
                android:text="Shipping"
                android:textColor="#a9aaac"/>
            <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14dp"
                android:text="Payment"
                android:textColor="#ffffff"/>
            <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14dp"
                android:text="Confirm"
                android:textColor="#a9aaac"/>
        </LinearLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:text="Choose Payment Method"
                    android:background="#ffffff"
                    android:paddingTop="16dp"
                    android:paddingLeft="22dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="31dp"
                    android:background="#ffffff"
                    android:paddingBottom="16dp"
                    android:paddingLeft="22dp">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="17dp"
                        android:src="@drawable/credit_card"/>
                    <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="@color/textColor"
                        android:text="Credit  Card"
                        android:paddingLeft="20dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="#cdd9d9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:background="#ffffff"
                    android:paddingBottom="16dp"
                    android:paddingLeft="22dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/cash"/>
                    <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="@color/textColor"
                        android:text="Cash On Delivery"
                        android:paddingLeft="24dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="#cdd9d9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:background="#ffffff"
                    android:paddingBottom="16dp"
                    android:paddingLeft="22dp">
                    <ImageView
                        android:layout_width="29dp"
                        android:layout_height="10dp"
                        android:src="@drawable/paytm"/>
                    <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="@color/textColor"
                        android:text="PAYTM"
                        android:paddingLeft="14dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="#cdd9d9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="22dp">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/google_wallet"/>
                    <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="@color/textColor"
                        android:text="Google Wallet"
                        android:paddingLeft="20dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="#cdd9d9"/>




            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <e.wolfsoft1.iyedelivery.customfonts.MyTextView_Roboto_Medium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_rect"
        android:text="Confirm Order >"
        android:textColor="#ffffff"
        android:paddingBottom="18dp"
        android:paddingTop="18dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"/>


</RelativeLayout>